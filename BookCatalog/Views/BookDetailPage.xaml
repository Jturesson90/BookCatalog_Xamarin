<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="BookCatalog.Views.BookDetailPage">
    <StackLayout HorizontalOptions="Center" VerticalOptions="CenterAndExpand">
        <Label Text="{Binding Path=Book.Title}" FontAttributes="Bold" FontSize="Large" HorizontalTextAlignment="Center" />
        <Label Text="{Binding Path=Book.Genre}" FontAttributes="Bold" FontSize="Medium" HorizontalTextAlignment="Center" />
        <Label Text="{Binding Path=Book.Price}" FontSize="Medium" HorizontalTextAlignment="Center" TextColor="#F44336" />
        <Label Text="{Binding Path=Book.Description}" Margin="20" HorizontalTextAlignment="Center"/>
        <Label Text="{Binding Path=Book.Author}" Margin="20" HorizontalTextAlignment="Center" TextColor="Maroon"/>
    </StackLayout>
</ContentPage>